<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textSize="17sp"
                    android:textColor="@color/white" />



            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/black_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:gravity="center"
            android:layout_margin="10dp"
            />



        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/alegreya_sc"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="select file :"
                android:textColor="@color/black"/>


            <ImageView
                android:tint="#020202"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clip"/>

            <Button
                android:visibility="gone"
                android:fontFamily="@font/alegreya_sc"
                android:background="@drawable/rect_button_bg"
                android:textColor="@color/black"
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:text="Select" />






        </LinearLayout>


        <TextView
            android:id="@+id/tv_Path"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:fontFamily="@font/alegreya_sc"
                android:textSize="15sp"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="module type :"
                android:textColor="@color/black"/>


            <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/spinner_ModuleType"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:gravity="center"
                android:id="@+id/btn_boxScanning"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/alegreya_sc"
                android:background="@drawable/buttong_bg"
                android:textColor="@color/black"
                android:text="box scanning" />


            <Button

                android:fontFamily="@font/alegreya_sc"
                android:background="@drawable/buttong_bg"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textColor="@color/black"
                android:text="exit" />



        </LinearLayout>







    </LinearLayout>
</LinearLayout>